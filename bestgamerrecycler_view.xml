<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:paddingLeft="15dp"
    android:gravity="center"
    android:background="@drawable/bestgameritemsbackground"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/siraTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/menu_btn_color"
        android:textSize="@dimen/best_gamer_sira" />

    <ImageView
        android:id="@+id/recyclerviewGamerPhoto"
        android:layout_width="50dp"
        android:layout_marginLeft="6dp"
        android:layout_height="50dp"
        android:background="@drawable/gamer_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:text="ahmet"
            android:textColor="@color/menu_btn_color"
            android:textSize="@dimen/bestgamerlist_nametext" />
        <TextView
            android:id="@+id/userPointText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="10000"
            android:gravity="right|bottom"
            android:textColor="@color/menu_btn_color"
            android:textSize="@dimen/bestgamerlist_pointtext" />

    </LinearLayout>
</LinearLayout>